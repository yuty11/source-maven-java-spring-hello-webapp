pipeline {
  agent none

  stages {
    stage('Checkout') {
      agent {
        docker { image 'maven:3-openjdk-17' }
      }
      steps {
        git branch: 'main', url: 'https://github.com/yuty11/source-maven-java-spring-hello-webapp.git'
      }
    }
    stage('Build & Test') {
      agent {
        docker { image 'maven:3-openjdk-17' }
      }
      steps {
        sh 'mvn clean package'
      }
    }
    stage('Build Docker Image') {
      agent { label 'controller' }
      steps {
        sh 'docker image build -t yuty/myweb:${BUILD_NUMBER} .'
      }
    }
    stage('Tag Docker Image') {
      agent { label 'controller' }
      steps {
        sh 'docker image tag yuty/myweb:${BUILD_NUMBER} yuty/myweb:latest'
      }
    }
    stage('Publish Docker Image') {
      agent { label 'controller' }
      steps {
        withDockerRegistry(credentialsId: 'docker-registry-credential', url: 'https://index.docker.io/v1/') {
          sh 'docker image push yuty/myweb:${BUILD_NUMBER}'
          sh 'docker image push yuty/myweb:latest'
        }
      }
    }
    stage('Remove Existing Container') {
      agent { label 'controller' }
      steps {
        sh '''
          if [ $(docker ps -aq -f name=my-tomcat) ]; then
            docker container rm -f my-tomcat
          fi
        '''
      }
    }
    stage('Run Docker Container') {
      agent { label 'controller' }
      steps {
        sh 'docker container run --detach --name my-tomcat -p 80:8080 yuty/myweb:latest'
      }
    }
  }
}

